---
const items = [
  {
    title: 'Inicio',
    link: '/',
  },
  {
    title: 'Nosotros',
    link: '/nosotros',
  },
  {
    title: 'Cursos',
    link: '/cursos',
  },
  {
    title: 'Contacto',
    link: '/contacto',
  },
];
---

<nav
  class="flex items-center justify-between flex-wrap px-5 py-4 fixed w-full z-50 top-0 shadow-sm bg-white"
  x-data="{ isOpen: false }"
  @keydown.escape.window="isOpen = false"
  :class="{ 'shadow-lg bg-bone-light' : isOpen , 'bg-bone-light' : !isOpen }"
>
  <!-- Logo etc -->
  <div class="flex items-center">
    <a href="/">
      <img class="h-16" src="/logo-ascend.svg" alt="Logo Ascend">
    </a>
  </div>

  <!-- Toggle button (hidden on large screens) -->
  <button
    @click="isOpen = !isOpen"
    type="button"
    class="block lg:hidden px-2 text-slate-800 hover:text-slate-800 focus:outline-none"
    :class="{ 'transition transform rotate-180': isOpen }"
    aria-label="Toggle menu"
  >
    <svg
      class="h-6 w-6 fill-current"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <!-- Close icon -->
      <path
        x-show="isOpen"
        x-cloak
        fill-rule="evenodd"
        clip-rule="evenodd"
        d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
      />
      <!-- Hamburger icon -->
      <path
        x-show="!isOpen"
        x-cloak
        fill-rule="evenodd"
        d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
      />
    </svg>
  </button>

  <!-- Menu -->
  <div
    class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
    :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
    @click.outside="isOpen = false"
    x-show="isOpen || window.innerWidth >= 1024"
    x-transition
    style="display: none;"
  >
    <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center uppercase text-center">
      {items.map(item => (
        <li class="mr-3">
          <a
            class="inline-block text-slate-800 no-underline hover:text-slate-800 hover:underline py-2 px-4 item"
            href={item.link}
            @click="isOpen = false"
            aria-label="Inicio" >{item.title}
          </a>
        </li>        
      ))}
    </ul>
  </div>
</nav>