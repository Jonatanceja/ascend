---
import MainButton from '../components/ui/MainButton.astro';
const icons = [
    {
        icon: '/toefl.webp',
        alt: 'TOEFL'
    },
    {
        icon: '/toeic.webp',
        alt: 'TOEIC'
    },
    {
        icon: '/cae.webp',
        alt: 'CAE'
    },
    {
        icon: '/cambridge.webp',
        alt: 'Cambridge'
    },
]
---

<section class=" max-w-6xl mx-auto px-5 py-10 relative z-10">
    <img src="/halftone.svg" alt="Medio tono" class="absolute top-24 -left-16 z-20">
    <img src="/elipse.svg" alt="elipse" class="absolute -bottom-5 -right-16 z-0">
    <div class="px-6 py-10 md:p-20 bg-white shadow-xl rounded-4xl space-y-5 relative z-10">
        <h6 class="text-center">Inglés empresarial para propósitos específicos</h6>
        <p class="text-center text-lg">
            Prepárate para los exámenes internacionales más reconocidos.
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-5 items-center py-5">
            {icons.map(icon => (
                <img src={icon.icon} alt={icon.alt} class="w-32 mx-auto">
            ))}
        </div>
        <div class="flex justify-center">
            <MainButton href="/contacto">Contáctanos</MainButton>
        </div>
    </div>

</section>