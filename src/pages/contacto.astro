---
import Layout from '../layouts/Layout.astro';
import Contacto from '../components/Contacto.astro';
import ContactLinks from '../components/ui/ContactLinks.astro';
---

<Layout title="Contacto">
    <Contacto />
    <section class="max-w-6xl mx-auto px-5 py-10 relative z-10 grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-20">
        <div class="space-y-5">
            <ContactLinks type="phone" icon="/telefono.svg" value="52 33 1225 2737" />
            <ContactLinks type="whatsapp" icon="/whatsapp.svg" value="52 33 1225 2737" />
            <ContactLinks type="email" icon="/correo.svg" value="contacto@ascenlanguage.com" />
            <ContactLinks type="address" icon="/mapa.svg" value="C. Quebrada 2300-1, Verde Valle, 44550 Guadalajara, Jal." />
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3733.465429895274!2d-103.39744471986468!3d20.650635231672556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428addab2fa6e55%3A0x9cbb21b621ba9c3e!2sC.%20Quebrada%202300%2C%20Verde%20Valle%2C%2044550%20Guadalajara%2C%20Jal.!5e0!3m2!1ses-419!2smx!4v1750719018811!5m2!1ses-419!2smx" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="px-6 py-10 md:p-20 bg-gradient-to-r from-red-800 to-slate-800 rounded-4xl space-y-5 relative z-10">
            <div class="text-white text-lg">
                Rellena el formulario para recibir más información detallada.
            </div>
            <form class="space-y-5">
                <div class="flex flex-col md:flex-row gap-5">
                    <label for="nombre" class="hidden">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Nombre" class="bg-white rounded-md p-3 w-full">
                </div>
                <div class="flex flex-col md:flex-row gap-5">
                    <label for="correo" class="hidden">Correo electrónico:</label>
                    <input type="email" id="correo" name="correo" placeholder="Correo electrónico" class="bg-white rounded-md p-3 w-full">
                </div>

                <div class="flex flex-col md:flex-row gap-5">
                    <label for="telefono" class="hidden">Teléfono:</label>
                    <input type="tel" id="telefono" name="telefono" placeholder="Teléfono" class="bg-white rounded-md p-3 w-full">

                    <label for="personas" class="hidden">Número de personas:</label>
                    <input type="number" id="personas" name="personas" placeholder="Personas" class="bg-white rounded-md p-3 w-full">
                </div>

                <div>
                    <label for="curso" class="hidden">Tipo de curso:</label>
                    <select id="curso" name="curso" class="bg-white rounded-md p-3 w-full">
                    <option value="">Selecciona un curso</option>
                    <option value="ingles-general">Inglés General</option>
                    <option value="ingles-negocios">Inglés de Negocios</option>
                    <option value="preparacion-examen">Preparación para Exámenes</option>
                    <option value="preparacion-examen">Cursos a medida</option>
                    </select>
                </div>

                <input
                    type="submit"
                    value="Enviar"
                    class="inline-flex items-center px-6 py-3 rounded-xl font-medium transition-colors bg-slate-800 text-white hover:text-slate-800 hover:bg-white border border-white cursor-pointer"
                >
            </form>
        </div>
    </section>
</Layout>